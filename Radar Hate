  <main>
    <div class="chat" id="chat">
      <div class="message ai">
        Cześć Edyta! Wklej tekst, post, komentarz lub link – przeanalizuję go pod kątem mowy nienawiści i zasugeruję działania. Przykładowo: "Jesteś zerem, zniknij".
      </div>
    </div>

    <div class="input-area">
      <textarea id="input" placeholder="Wpisz wiadomość, post, komentarz..."></textarea>
      <button onclick="sendMessage()">Wyślij</button>
    </div>
  </main>

  <script>
    function sendMessage() {
      const input = document.getElementById('input');
      const chat = document.getElementById('chat');
      const userText = input.value.trim();
      if (!userText) return;

      chat.innerHTML += `<div class="message user-msg">${userText}</div>`;
      input.value = '';

      setTimeout(() => {
        chat.innerHTML += `
          <div class="message ai">
            <span class="alert">⚠️ Wykryto mowę nienawiści (98% pewności)</span><br>
            📌 Kategoria: Osobiste znieważenie / Cyberprzemoc<br>
            🌍 Język: Polski<br>
            🔗 Kontekst: Celuje w samoocenę, potencjalnie narusza prawo.<br><br>
            <strong>✅ Co możesz zrobić (Edyta):</strong>
            <div class="actions">
              <div class="btn-small" onclick="generateReport()">📄 Generuj raport PDF</div>
              <div class="btn-small" onclick="reportPlatform()">🚨 Zgłoś do platformy</div>
              <div class="btn-small" onclick="legalSupport()">⚖️ Przekaż do organizacji prawnej</div>
              <div class="btn-small" onclick="psychSupport()">🧠 Wsparcie psychologiczne</div>
            </div>
            <small>💡 Podpowiedź: "Jak chronić przed hejtem online?"</small>
          </div>`;
        chat.scrollTop = chat.scrollHeight;
      }, 800);
    }

    function generateReport() { alert('Raport PDF gotowy! Pobierz z /reports'); }
    function reportPlatform() { alert('Zgłoszenie wysłane!'); }
    function legalSupport() { window.open('https://example-ngo.pl/hate', '_blank'); }
    function psychSupport() { window.open('https://psych-support.pl', '_blank'); }

    document.getElementById('input').addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });
  </script>
